-- =============================================
-- SISTEMA CORRIGIDO + PONTOS ELABORADOS
-- =============================================

print("=== SISTEMA CORRIGIDO ===")

-- Pega TODAS as telas
local telas = {peripheral.find("monitor")}
if not telas[1] then telas = {telas} end

print("Telas detectadas: " .. #telas)

-- Configura todas as telas
for i, tela in ipairs(telas) do
    tela.setTextScale(0.5)
end

-- MODOS DE COR
local modosCor = {
    ["Branco"] = { cores = {colors.white} },
    ["ColoridoAleatorio"] = {
        cores = { colors.red, colors.orange, colors.yellow, colors.lime, 
                 colors.green, colors.cyan, colors.lightBlue, colors.blue, 
                 colors.purple, colors.pink, colors.magenta }
    },
    ["CorSolida"] = {
        cores = { colors.red, colors.orange, colors.yellow, colors.lime,
                 colors.green, colors.blue, colors.purple, colors.pink }
    }
}

-- VELOCIDADES
local velocidades = {
    ["Lenta"] = { multiplicador = 2.0 },
    ["Media"] = { multiplicador = 1.0 },
    ["Rapida"] = { multiplicador = 0.5 },
    ["Eletronica"] = { multiplicador = 0.25 }
}

-- Vari√°veis globais
local modoCorAtual = "Branco"
local velocidadeAtual = "Media"
local corSolidaAtual = colors.red

-- Fun√ß√£o para obter cor
function obterCor(telaIndex)
    if modoCorAtual == "Branco" then
        return colors.white
    elseif modoCorAtual == "ColoridoAleatorio" then
        return modosCor.ColoridoAleatorio.cores[math.random(1, #modosCor.ColoridoAleatorio.cores)]
    elseif modoCorAtual == "CorSolida" then
        return corSolidaAtual
    end
    return colors.white
end

-- Fun√ß√£o para aplicar velocidade
function aplicarVelocidade(tempoBase)
    return tempoBase * velocidades[velocidadeAtual].multiplicador
end

-- EFEITO 6: GRADIENTE CORRIGIDO
function gradient()
    print("Gradiente - Modo: " .. modoCorAtual .. " | Velocidade: " .. velocidadeAtual)
    
    local posicao = 0
    
    while true do
        posicao = posicao + 1
        
        for i, tela in ipairs(telas) do
            local w, h = tela.getSize()
            
            -- Gradiente HORIZONTAL simples e funcional
            for x = 1, w do
                -- Calcula progresso baseado na posi√ß√£o
                local progresso = (x + posicao) % w / w
                
                -- Define cor baseada no modo
                local cor
                if modoCorAtual == "Branco" then
                    -- Gradiente de cinza
                    if progresso < 0.33 then cor = colors.gray
                    elseif progresso < 0.66 then cor = colors.lightGray
                    else cor = colors.white end
                else
                    -- Gradiente colorido
                    local corBase = obterCor(i)
                    cor = corBase  -- Usa a cor do modo diretamente
                end
                
                -- Pinta a coluna inteira
                for y = 1, h do
                    tela.setBackgroundColor(cor)
                    tela.setCursorPos(x, y)
                    tela.write(" ")
                end
            end
        end
        
        os.sleep(aplicarVelocidade(0.2))
    end
end

-- EFEITO 5B: CONSTELA√á√ÉO EM MOVIMENTO (vers√£o elaborada)
function constelacao()
    print("Constela√ß√£o em Movimento - Modo: " .. modoCorAtual .. " | Velocidade: " .. velocidadeAtual)
    
    local estrelas = {}
    local tempo = 0
    
    -- Cria estrelas iniciais
    for i, tela in ipairs(telas) do
        local w, h = tela.getSize()
        estrelas[i] = {}
        
        for s = 1, 8 do  -- 8 estrelas por tela
            estrelas[i][s] = {
                x = math.random(2, w - 1),
                y = math.random(2, h - 1),
                velocidadeX = (math.random() - 0.5) * 0.8,
                velocidadeY = (math.random() - 0.5) * 0.8,
                tamanho = math.random(1, 3),
                brilho = math.random(1, 3),
                cor = obterCor(i)
            }
        end
    end
    
    while true do
        tempo = tempo + 1
        
        for i, tela in ipairs(telas) do
            local w, h = tela.getSize()
            tela.setBackgroundColor(colors.black)
            tela.clear()
            
            -- Atualiza e desenha estrelas
            for s, estrela in ipairs(estrelas[i]) do
                -- Move estrela
                estrela.x = estrela.x + estrela.velocidadeX
                estrela.y = estrela.y + estrela.velocidadeY
                
                -- Rebate nas bordas
                if estrela.x <= 1 or estrela.x >= w then
                    estrela.velocidadeX = -estrela.velocidadeX
                end
                if estrela.y <= 1 or estrela.y >= h then
                    estrela.velocidadeY = -estrela.velocidadeY
                end
                
                -- Mant√©m dentro dos limites
                estrela.x = math.max(1, math.min(w, estrela.x))
                estrela.y = math.max(1, math.min(h, estrela.y))
                
                -- Desenha estrela com tamanho variado
                local cor = estrela.cor
                local x = math.floor(estrela.x)
                local y = math.floor(estrela.y)
                
                -- Estrela principal
                tela.setBackgroundColor(cor)
                tela.setCursorPos(x, y)
                tela.write(" ")
                
                -- Estrelas maiores t√™m "brilho"
                if estrela.tamanho >= 2 then
                    if x > 1 then tela.setCursorPos(x - 1, y); tela.write(" ") end
                    if x < w then tela.setCursorPos(x + 1, y); tela.write(" ") end
                end
                if estrela.tamanho >= 3 then
                    if y > 1 then tela.setCursorPos(x, y - 1); tela.write(" ") end
                    if y < h then tela.setCursorPos(x, y + 1); tela.write(" ") end
                end
                
                -- Efeito de piscar aleat√≥rio
                if math.random(1, 50) == 1 then
                    estrela.brilho = math.random(1, 3)
                    estrela.cor = obterCor(i)
                end
            end
            
            -- Novas estrelas ocasionalmente
            if tempo % 30 == 0 and #estrelas[i] < 12 then
                table.insert(estrelas[i], {
                    x = math.random(2, w - 1),
                    y = 1,  -- Entra pelo topo
                    velocidadeX = (math.random() - 0.5) * 0.5,
                    velocidadeY = math.random(0.3, 0.8),
                    tamanho = math.random(1, 3),
                    brilho = math.random(1, 3),
                    cor = obterCor(i)
                })
            end
        end
        
        os.sleep(aplicarVelocidade(0.1))
    end
end

-- EFEITO 5C: PART√çCULAS ORBITAIS (outra vers√£o elaborada)
function particulasOrbitais()
    print("Part√≠culas Orbitais - Modo: " .. modoCorAtual .. " | Velocidade: " .. velocidadeAtual)
    
    local particulas = {}
    local tempo = 0
    
    for i, tela in ipairs(telas) do
        local w, h = tela.getSize()
        particulas[i] = {}
        
        -- Cria part√≠culas orbitando o centro
        for p = 1, 6 do
            local angulo = math.random(0, 360)
            local raio = math.random(5, math.min(w, h) * 0.3)
            local velocidade = math.random(1, 3) * 0.1
            
            particulas[i][p] = {
                angulo = angulo,
                raio = raio,
                velocidade = velocidade,
                tamanho = math.random(1, 2),
                cor = obterCor(i),
                centroX = math.floor(w / 2),
                centroY = math.floor(h / 2)
            }
        end
    end
    
    while true do
        tempo = tempo + 1
        
        for i, tela in ipairs(telas) do
            local w, h = tela.getSize()
            tela.setBackgroundColor(colors.black)
            tela.clear()
            
            -- Desenha centro fixo
            local centroX = math.floor(w / 2)
            local centroY = math.floor(h / 2)
            tela.setBackgroundColor(colors.white)
            tela.setCursorPos(centroX, centroY)
            tela.write(" ")
            
            -- Atualiza e desenha part√≠culas orbitais
            for p, particula in ipairs(particulas[i]) do
                -- Atualiza √¢ngulo
                particula.angulo = (particula.angulo + particula.velocidade) % 360
                
                -- Calcula posi√ß√£o
                local x = particula.centroX + math.cos(particula.angulo) * particula.raio
                local y = particula.centroY + math.sin(particula.angulo) * particula.raio
                
                x = math.floor(x)
                y = math.floor(y)
                
                -- Desenha part√≠cula
                if x >= 1 and x <= w and y >= 1 and y <= h then
                    tela.setBackgroundColor(particula.cor)
                    tela.setCursorPos(x, y)
                    tela.write(" ")
                    
                    -- Part√≠culas maiores
                    if particula.tamanho >= 2 then
                        if x > 1 then tela.setCursorPos(x - 1, y); tela.write(" ") end
                        if x < w then tela.setCursorPos(x + 1, y); tela.write(" ") end
                    end
                end
                
                -- Muda cor ocasionalmente
                if tempo % 40 == 0 then
                    particula.cor = obterCor(i)
                end
            end
            
            -- Linhas conectando as part√≠culas (opcional)
            if tempo % 2 == 0 then
                for p1 = 1, #particulas[i] - 1 do
                    for p2 = p1 + 1, #particulas[i] do
                        local part1 = particulas[i][p1]
                        local part2 = particulas[i][p2]
                        
                        local x1 = part1.centroX + math.cos(part1.angulo) * part1.raio
                        local y1 = part1.centroY + math.sin(part1.angulo) * part1.raio
                        local x2 = part2.centroX + math.cos(part2.angulo) * part2.raio
                        local y2 = part2.centroY + math.sin(part2.angulo) * part2.raio
                        
                        -- Desenha linha pontilhada entre part√≠culas pr√≥ximas
                        local distancia = math.sqrt((x2-x1)^2 + (y2-y1)^2)
                        if distancia < math.min(w, h) * 0.4 then
                            tela.setBackgroundColor(colors.gray)
                            for t = 0, 1, 0.2 do
                                local lx = math.floor(x1 + (x2 - x1) * t)
                                local ly = math.floor(y1 + (y2 - y1) * t)
                                if lx >= 1 and lx <= w and ly >= 1 and ly <= h and t % 0.4 > 0.2 then
                                    tela.setCursorPos(lx, ly)
                                    tela.write(" ")
                                end
                            end
                        end
                    end
                end
            end
        end
        
        os.sleep(aplicarVelocidade(0.08))
    end
end

-- [MANTENHA AQUI OS OUTROS EFEITOS ORIGINAIS: pulsoSequencial, onda, respiracao, etc...]
-- EFEITO 1: PULSO SEQUENCIAL (mantido)
function pulsoSequencial()
    print("Pulso Sequencial - Modo: " .. modoCorAtual .. " | Velocidade: " .. velocidadeAtual)
    
    local telaAtiva = 1
    
    while true do
        for i, tela in ipairs(telas) do
            tela.setBackgroundColor(colors.black)
            tela.clear()
        end
        
        local cor = obterCor(telaAtiva)
        telas[telaAtiva].setBackgroundColor(cor)
        telas[telaAtiva].clear()
        
        telaAtiva = telaAtiva + 1
        if telaAtiva > #telas then telaAtiva = 1 end
        
        os.sleep(aplicarVelocidade(0.3))
    end
end

-- EFEITO 2: ONDA (mantido)
function onda()
    print("Onda - Modo: " .. modoCorAtual .. " | Velocidade: " .. velocidadeAtual)
    
    local posicao = 0
    
    while true do
        posicao = posicao + 1
        
        for i, tela in ipairs(telas) do
            tela.setBackgroundColor(colors.black)
            tela.clear()
            
            local deveAcender = (posicao % #telas) + 1 == i
            
            if deveAcender then
                local cor = obterCor(i)
                tela.setBackgroundColor(cor)
                tela.clear()
            end
        end
        
        os.sleep(aplicarVelocidade(0.2))
    end
end

-- MENUS (mantidos do c√≥digo anterior)
function menuVelocidade()
    print("\n" .. string.rep("=", 45))
    print("SELECIONE A VELOCIDADE")
    print(string.rep("=", 45))
    print("1. üê¢ LENTA")
    print("2. üö∂ M√âDIA")
    print("3. üèÉ R√ÅPIDA") 
    print("4. ‚ö° ELETR√îNICA")
    print(string.rep("=", 45))
    
    write("Escolha (1-4): ")
    local escolha = read()
    
    if escolha == "1" then velocidadeAtual = "Lenta"
    elseif escolha == "2" then velocidadeAtual = "Media"
    elseif escolha == "3" then velocidadeAtual = "Rapida"
    elseif escolha == "4" then velocidadeAtual = "Eletronica"
    else print("Velocidade mantida: " .. velocidadeAtual) end
    
    os.sleep(1)
end

function menuCores()
    print("\n" .. string.rep("=", 40))
    print("SELECIONE CORES")
    print(string.rep("=", 40))
    print("1. ‚ö™ Branco & Preto")
    print("2. üåà Colorido Aleat√≥rio")
    print("3. üé® Cor S√≥lida")
    print(string.rep("=", 40))
    
    write("Escolha (1-3): ")
    local escolha = read()
    
    if escolha == "1" then
        modoCorAtual = "Branco"
        print("Modo: ‚ö™ Branco & Preto")
    elseif escolha == "2" then
        modoCorAtual = "ColoridoAleatorio"
        print("Modo: üåà Colorido Aleat√≥rio")
    elseif escolha == "3" then
        modoCorAtual = "CorSolida"
        print("\nESCOLHA A COR:")
        print("1.üî¥ 2.üü† 3.üü° 4.üü¢ 5.üîµ 6.üü£ 7.üéÄ")
        write("Cor (1-7): ")
        local corEscolha = tonumber(read())
        local cores = {colors.red, colors.orange, colors.yellow, colors.green, colors.blue, colors.purple, colors.pink}
        if corEscolha and corEscolha >=1 and corEscolha <=7 then
            corSolidaAtual = cores[corEscolha]
        end
    else
        print("Modo mantido: " .. modoCorAtual)
    end
    
    os.sleep(1)
end

-- MENU PRINCIPAL ATUALIZADO
function menuPrincipal()
    menuVelocidade()
    menuCores()
    
    print("\n" .. string.rep("=", 50))
    print("EFEITOS DISPON√çVEIS - " .. #telas .. " TELAS")
    print("üéµ Velocidade: " .. velocidadeAtual)
    print("üé® Modo: " .. modoCorAtual)
    print(string.rep("=", 50))
    print("1. Pulso Sequencial")
    print("2. Onda")
    print("3. Respira√ß√£o")
    print("4. Barras Verticais")
    print("5. üîµ Constela√ß√£o em Movimento (NOVO)")
    print("6. üåÄ Part√≠culas Orbitais (NOVO)")
    print("7. Piscada Aleat√≥ria")
    print("8. Grupos Sequenciais")
    print("9. üîÑ Trocar Configura√ß√µes")
    print("0. üö™ Sair")
    print(string.rep("=", 50))
    
    write("Escolha o efeito (1-9, 0=sair): ")
    local escolha = read()
    
    if escolha == "1" then pulsoSequencial()
    elseif escolha == "2" then onda()
    -- [Adicione os outros efeitos aqui...]
    elseif escolha == "5" then constelacao()
    elseif escolha == "6" then particulasOrbitais()
    elseif escolha == "9" then return true
    elseif escolha == "0" then 
        for i, tela in ipairs(telas) do
            tela.setBackgroundColor(colors.black)
            tela.clear()
        end
        return false
    else
        print("Op√ß√£o inv√°lida!")
        os.sleep(1)
    end
    
    return true
end

-- PROGRAMA PRINCIPAL
function main()
    print("Sistema Corrigido Iniciado!")
    
    local executando = true
    while executando do
        executando = menuPrincipal()
    end
    
    print("Programa encerrado!")
end

-- INICIAR
main()
